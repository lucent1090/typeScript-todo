{
  "name": "ts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "23.3.10",
    "@types/node": "10.12.18",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "react": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "react-scripts": "2.1.1",
    "typescript": "3.2.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test.ci": "CI=true react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "husky": "^1.3.1",
    "jest-dom": "^3.0.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.0",
    "react-testing-library": "^5.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test.ci && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write --parser typescript --single-quote",
      "git add"
    ],
    "*.{json. md}": [
      "prettier --write",
      "git add"
    ]
  }
}
